<view class="self">
    <view class="title">
        <view class="icon">
            <view class="img">
                <image src="{{backgroundImg}}" wx:if="{{backgroundImg}}"></image>
                <view wx:else class="login iconfont icon-denglu"></view>
            </view>
            <view class="cot" wx:if="{{backgroundImg}}">{{name}}</view>
            <view class="cot" wx:else>未登录</view>
        </view>
    </view>
