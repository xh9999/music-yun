.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.usermotto {
  margin-top: 200px;
}
.container {
  padding: 0;
  background-color: black;
}
.container .userName {
  color: white;
}
.search-list {
  padding: 20rpx;
  background-color: black;
  color: white;
  display: flex;
  flex-direction: column;
}
.search-list .item {
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid black;
  border-radius: 8px;
  color: black;
}
.search-list .item .bg {
  width: 150rpx;
  height: 150rpx;
}
.search-list .songs-detail {
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
}
.search-list .play {
  width: 60rpx;
  height: 60rpx;
}
.search-list .left {
  display: flex;
  align-items: center;
}
.search-list .left .text {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}
.search-list .right {
  display: flex;
  align-items: center;
}
.search-list .right text {
  font-size: 12px;
  color: grey;
}
.search-list .right .mv {
  display: flex;
  align-items: center;
}
.search-list .right .mv .mvplay {
  width: 40rpx;
  height: 40rpx;
}
