.self .title {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: #202020;
}
.self .title .icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300rpx;
  height: 168rpx;
}
.self .title .icon .img {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.self .title .icon .img image {
  width: 100%;
  height: 100%;
}
.self .title .icon .cot {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 300rpx;
  text-align: center;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
