<form bindsubmit="handle" class="center">
    <van-cell-group>
        <van-field value="{{ username }}" required clearable label="手机号码" placeholder="请输入手机号码" name="phone"  class="one"/>
        <van-field value="{{ password }}" name="password" type="password" label="密码" placeholder="请输入密码" required border="{{ false }}" class="two"/>
    </van-cell-group>
    <button type="primary" formType="submit">登录</button>
</form>
<view class="mask"></view>
<van-notify id="van-notify" />